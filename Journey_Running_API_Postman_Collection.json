				{
					"name": "Mock Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Mock Login 성공\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"JWT 토큰 자동 저장\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.data.jwtToken) {",
									"        pm.environment.set(\"authToken\", jsonData.data.jwtToken);",
									"        console.log(\"JWT 토큰이 환경 변수에 저장되었습니다: authToken\");",
									"    }",
									"});"
								],
