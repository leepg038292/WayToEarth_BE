	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 환경 변수 자동 설정",
					"if (!pm.environment.get('baseUrl')) {",
					"    pm.environment.set('baseUrl', 'http://localhost:8080');",
					"}",
					"",
					"if (!pm.environment.get('userId')) {",
					"    pm.environment.set('userId', '1');",
					"}",
					"",
					"if (!pm.environment.get('journeyId')) {",
					"    pm.environment.set('journeyId', '1');",
					"}",
					"",
					"if (!pm.environment.get('progressId')) {",
					"    pm.environment.set('progressId', '1');",
					"}",
					"",
					"if (!pm.environment.get('landmarkId')) {",
					"    pm.environment.set('landmarkId', '1');",
					"}",
					"",
					"if (!pm.environment.get('storyCardId')) {",
					"    pm.environment.set('storyCardId', '1');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 기본 테스트",
					"pm.test('Status code is success', function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
					"});",
					"",
					"// JSON 응답 검증",
					"if (pm.response.headers.get('Content-Type') && pm.response.headers.get('Content-Type').includes('application/json')) {",
					"    pm.test('Response is valid JSON', function () {",
					"        pm.response.to.be.json;",
					"    });",
					"}",
					"",
					"// 응답 시간 검증",
					"pm.test('Response time is less than 2000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(2000);",
					"});",
					"",
					"// 응답에서 ID 값 자동 추출",
					"if (pm.response.json() && pm.response.json().progressId) {",
					"    pm.environment.set('progressId', pm.response.json().progressId);",
					"}",
					"",
					"if (pm.response.json() && pm.response.json().id) {",
					"    // 컨텍스트에 따라 적절한 변수 설정",
					"    const requestUrl = pm.request.url.toString();",
					"    if (requestUrl.includes('/journeys/')) {",
					"        pm.environment.set('journeyId', pm.response.json().id);",
					"    } else if (requestUrl.includes('/landmarks/')) {",
					"        pm.environment.set('landmarkId', pm.response.json().id);",
					"    } else if (requestUrl.includes('/story-cards/')) {",
					"        pm.environment.set('storyCardId', pm.response.json().id);",
					"    }",
					"}"
				]
			}
		}
